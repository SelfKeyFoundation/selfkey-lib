{
  "name": "@selfkey/node-lib",
  "version": "1.0.0-beta.9",
  "description": "SelfKey Javascript Library",
  "keywords": [
    "selfkey",
    "javascript"
  ],
  "author": {
    "name": "SelfKey Foundation",
    "email": "help@selfkey.org",
    "url": "https://selfkey.org/"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/SelfKeyFoundation/selfkey.js.git"
  },
  "bugs": {
    "url": "http://github.com/SelfKeyFoundation/selfkey.js/issues"
  },
  "license": "GPL-3.0",
  "licenses": [
    {
      "type": "GPL-3.0",
      "url": "https://opensource.org/licenses/GPL-3.0"
    }
  ],
  "main": "./lib/index.js",
  "dependencies": {
    "ajv": "6.10.0",
    "ethereumjs-util": "6.1.0",
    "jsonwebtoken": "8.5.1",
    "pemtools": "0.4.7",
    "request": "2.88.0",
    "request-promise-native": "1.0.8",
    "snyk": "1.189.0",
    "web3": "1.0.0-beta.55"
  },
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.3",
    "@babel/preset-env": "7.4.3",
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "7.1.2",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.7.1",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-jest": "22.4.1",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-standard": "4.0.0",
    "husky": "1.2.0",
    "jest": "24.7.1",
    "jsdoc-to-markdown": "^5.0.3",
    "lint-staged": "8.1.5",
    "lolex": "4.0.1",
    "npm-check": "5.9.0",
    "prettier": "1.15.2",
    "pretty-quick": "1.8.0",
    "sinon": "7.5.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "build": "rm -rf lib/ && babel src -d lib --ignore=*.spec.js --ignore=**/*.spec.js --ignore=**/__fixtures__/** && cp -rf ./src/assets ./lib",
    "test": "jest",
    "check-deps-precommit": "npm-check -i eslint -i || true",
    "snyik-protect": "snyk protect",
    "prepublish": "yarn snyk-protect",
    "generate-readme": "jsdoc2md --template=README.hbs src/**/*.js > README.md"
  },
  "snyk": false
}
