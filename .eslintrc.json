{
	"extends": ["standard", "prettier", "prettier/standard"],
	"plugins": ["prettier", "standard", "jest"],
	"parser": "babel-eslint",
	"env": {
		"es6": true,
		"node": true,
		"mocha": true,
		"jest": true
	},
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"semi": true
			}
		]
	}
}
